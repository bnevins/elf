<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AuthManager</servlet-name>
        <servlet-class>admin.AuthManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthUpdateManager</servlet-name>
        <servlet-class>admin.AuthUpdateManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthCreationManager</servlet-name>
        <servlet-class>admin.AuthCreationManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>admin.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupJSP</servlet-name>
        <jsp-file>/Signup.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Registrar</servlet-name>
        <servlet-class>admin.Registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/public/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthManager</servlet-name>
        <url-pattern>/AuthManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthUpdateManager</servlet-name>
        <url-pattern>/AuthUpdateManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthCreationManager</servlet-name>
        <url-pattern>/AuthCreationManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/SignupXX</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupJSP</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registrar</servlet-name>
        <url-pattern>/Registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>SecureArea</display-name>
        <web-resource-collection>
            <web-resource-name>Secured</web-resource-name>
            <description/>
            <url-pattern>/AuthManager</url-pattern>
            <url-pattern>/AuthUpdateManager</url-pattern>
            <url-pattern>/ManageSecurity.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMINISTRATORS</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>SecurrForUsers</display-name>
        <web-resource-collection>
            <web-resource-name>SecureForUsers</web-resource-name>
            <description/>
            <url-pattern>/Signup</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>USERS</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>bnevins</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>ADMINISTRATORS</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>USERS</role-name>
    </security-role>
</web-app>
